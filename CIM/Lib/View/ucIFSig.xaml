<UserControl
    x:Class="CIM.Lib.View.ucIFSig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:led="clr-namespace:CIM.Lib"
    xmlns:local="clr-namespace:CIM.Lib.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontSize="14"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CIM;component/Lib/MyDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <StackPanel
            Name="stackMain"
            Margin="5,5,5,5"
            Orientation="Horizontal">
            <GroupBox
                Name="gbRobot"
                Margin="5,0,0,0"
                Header="Robot">
                <Grid Name="rbGrid" />
            </GroupBox>
            <GroupBox
                Name="gbEq"
                Margin="5,0,0,0"
                Header="Eq">
                <Grid Name="eqGrid" />
            </GroupBox>
        </StackPanel>

        <TextBlock HorizontalAlignment="Left" Text="Work Data" />
        <TextBox
            x:Name="txtWorkData"
            Height="40"
            Margin="5,0,5,5"
            HorizontalScrollBarVisibility="Auto"
            MouseDoubleClick="txtWorkData_MouseDoubleClick"
            Style="{x:Null}"
            Text="{Binding StringValue}" />
    </StackPanel>
</UserControl>
