<html>
@{
    ViewData["Title"] = "Login";
}
<head>
    <meta charset="utf-8">

    <title>Login</title>
    <style type="text/css">

        * {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        html, body {
            height: 100%;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login {
            width: 600px;
            height: 400px;
            border-radius: 10px;
            border: 1px solid #888;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color:gray;
        }

        .form {
            width: 400px;
        }

            .form .group {
                margin-bottom: 20px;
            }

            .form label {
                line-height: 3;
            }

            .form input {
                width: 100%;
                border: 1px solid #aaa;
                line-height: 3;
                border-radius: 5px;
            }

            .form .btn-group {
                font-size: 0;
                margin-top: 50px;
            }

            .form .btn {
                font-size: 20px;
                border-radius: 5px;
                border: none;
                padding: 10px 30px;
                background: #dcdcdc;
                margin-left: 100px;
                cursor: pointer;
            }

                .form .btn + .btn {
                    margin-left: 20px;
                }


    </style>

    <script type="text/javascript" src="~/js/jquery-3.6.0.js"></script>
    <script>
        function STK_Message() {
            var x = document.getElementById("STK_Connect_Message").value;
            if (x != "OK")
                window.alert(x);
        }
        window.onload=function(){
            STK_Message();
        }
    </script>

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="">
</head>
<body style="background-color:black;" background="@Url.Content("~/Images/33946475.jpg")">
    <div class="login" background="@Url.Content("~/Images/33946475.jpg")">
        <form class="form" method="post" asp-area="" asp-controller="Login" asp-action="Index" autocomplete="off">
            <div class="group">
                <label for="user_id">使用者帳號:</label>
                <input type="text" style="width:100%;height:50px" name="UserID" id="user_id">
            </div>
            <div class="group">
                <label for="user_password">密碼:</label>
                <input type="password" style="width:100%;height:50px" name="UserPass" id="user_password">
            </div>
            <div class="submit-group">
                <input type="submit" value="登入" />
            </div>
        </form>
    </div>
    <input type="hidden" id="STK_Connect_Message" value="@TempData["STK_Connect_Message"].ToString().Trim()" />
    <!--[if lt IE 7]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <script src="" async defer></script>
</body>
</html>