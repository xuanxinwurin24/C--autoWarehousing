    <script src="https://cdn.staticfile.org/popper.js/1.12.5/umd/popper.min.js"></script>
    <script type="text/javascript">
        function trselect(t) {
            var tr = document.getElementsByName("ListTr");
            var tr_CB = document.getElementsByName("CB");
            if (tr_CB[t].value == "") {
                tr[t].style = "background-color:red";
                tr_CB[t].value = "Checked";
            }
            else {
                tr[t].style = "background-color:white";
                tr_CB[t].value = "";
            }
        }
        function Select_Checked() {
            var tr = document.getElementsByName("ListTr");
