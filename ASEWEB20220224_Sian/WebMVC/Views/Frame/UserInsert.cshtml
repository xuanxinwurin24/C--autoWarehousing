@{
    var Group = ViewBag.Group;
    var Message = ViewBag.Message;
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
    <script type="text/javascript" src="~/js/jquery-3.6.0.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" "></script>
    <script src="https://cdn.staticfile.org/popper.js/1.12.5/umd/popper.min.js"></script>
    <script type="text/javascript">
        function close_iframe() {
            document.getElementById("UID1").value = document.getElementById("UID").value;
            document.getElementById("UN1").value = document.getElementById("UN").value;
            document.getElementById("UP1").value = document.getElementById("UP").value;
            document.getElementById("myform").submit();
                parent.Insert_Close();
        }
        function cancel_iframe() {
            document.getElementById("UID1").value = "";
            document.getElementById("UN1").value = "";
            document.getElementById("UP1").value = "";
            parent.Insert_Cancel();
        }
        window.onload = function () {
            var m = document.getElementById("Insert_Message").value;
            if (m != "")
                window.alert(m);
        }
    </script>
    <style>
        tbody,tfoot td{
            text-align:center;
        }
        table {
            border-spacing: 0;
            width: 100%;
        }
    </style>
</head>
<body style="background-color:white">
    <table style="width: 350px; height: 250px">
        <tbody>
            <tr>
                <td>@("將於"+Group+"中新增使用者")</td>
            </tr>
            <tr>
                <td>使用者ID</td>
            </tr>
            <tr>
                <td><input type="text" id="UID" value="" /></td>
            </tr>
            <tr>
                <td>使用者名稱</td>
            </tr>
            <tr>
                <td><input type="text" id="UN" value="" /></td>
            </tr>
            <tr>
                <td>輸入密碼</td>
            </tr>
            <tr>
                <td><input type="password" id="UP" value="" /></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td><input type="button" value="確認" onclick="close_iframe()" /><input type="button" value="取消" onclick="cancel_iframe()" /></td>
            </tr>
        </tfoot>
    </table>
    <form id="myform" method="post" action="~/Frame/UserInsert">
        <input type="hidden" name="UID" value="" id="UID1" />
        <input type="hidden" name="UN" value="" id="UN1" />
        <input type="hidden" name="UP" value="" id="UP1" />
        <input type="hidden" name="UG" value="@Group" />
    </form>
    <input type="hidden" id="Insert_Message" value="@Message" />
</body>
</html>
