    <style type="text/css">
        body {
            margin: 0px;
        }

        .tabs {
            display: flex;
            flex-wrap: wrap;
            max-width: 800px;
            max-height: 800px;
            font-family: sans-serif;
        }

        .tabs__label {
            padding: 10px 16px;
            cursor: pointer;
        }

        .tabs__radio {
            display: none;
        }

        .tabs__content {
            order: 1;
            width: 100%;
            height: 100%;
            border-bottom: 0px solid #dddddd;
            line-height: 1.5;
            font-size: 0.9em;
            display: none;
        }

        .tabs__radio:checked + .tabs__label {
            font-weight: bold;
            color: #009578;
            border-bottom: 2px solid #009578;
        }

            .tabs__radio:checked + .tabs__label + .tabs__content {
                display: initial;
            }
        table {
            background-color: white;
            border-spacing: 0;
            width: 100%;
        }
            table tbody {
                display: block;
                overflow-y: auto;
                overflow-x:auto;
                -webkit-overflow-scrolling: touch;
            }
            table thead {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }

/*                table tbody::-webkit-scrollbar {
                    display: none;
                }*/
        
        thead, tbody tr {
            display: table;
            width: 100%;
            table-layout: fixed; /* even columns width , fix width of table too*/
        }

        table th {
            table-layout:fixed;
            word-break: break-all;
            height: 30px;
            padding: 0px;
            text-align: center;
        }
        table td {
            text-align: left;
            width: auto;
            /*word-break: break-all;*/
        }
        table thead {
            background-color: #f4f5f7;
            color: #000000;
        }

        thead tr th {
            position:sticky ;
            top: 0;
        }
        #DIVMessage{
            max-width:1000px;
            word-break:break-all;
        }
    </style>

</head>
