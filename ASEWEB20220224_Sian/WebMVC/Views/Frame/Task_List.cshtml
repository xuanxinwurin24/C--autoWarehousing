<!DOCTYPE html>

<html>
@{
    ViewData["Title"] = "Task";
    var data = ViewBag.Task;
    var list = ViewBag.list;
    var bg = "white";
}
@model ASEWEB.Models.TaskModel
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
    <script type="text/javascript" src="~/js/jquery-3.6.0.js"></script>
    <title>任務列表</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" "></script>
    <script src="https://cdn.staticfile.org/popper.js/1.12.5/umd/popper.min.js"></script>
    <script type="text/javascript">
    </script>
    <script>
        function Refresh_Iframe() {
            var a = document.getElementById("Task");
            a.submit();
        }
        function Release_CommandID(CMD_ID,Status) {
            parent.Take_CommandID(CMD_ID, Status);
        }
        window.onload = function () {
            setInterval("Refresh_Iframe()", 10000);
        }
        
    </script>
    <style type="text/css">
        #DIV1 {
            width: 1140px;
            height: 300px;
            line-height: 10px;
            padding: 0px;
            margin-right: 0px;
            float: left;
            position: absolute;
            top: 0px;
        }
        table {
            border-collapse: collapse
        }
            table tbody {
                display: block;
                overflow-y:auto;
                -webkit-overflow-scrolling: touch;
            }
                table tbody::-webkit-scrollbar {
                    display: none;
                }
            table th {
                table-layout: fixed;
                word-break: break-all;
                height: 30px;
                padding: 0px;
                text-align: center;
                font-size: 14px;
            }
        thead, tbody, tfoot tr {
            display: table;
            width: 100%;
            table-layout: fixed; /* even columns width , fix width of table too*/
        }
        thead tr th {
            position: sticky;
            top: 0;
        }

        tfoot tr td {
            position: sticky;
            bottom: 0;
        }
        table thead {
            background-color: #f4f5f7;
            color: #000000;
            table-layout: fixed;
        }
        table td {
            height: 30px;
            text-align: center;
            table-layout: fixed;
            word-break: break-all;
            height: 30px;
            padding: 0px;
            text-align: center;
            font-size: 14px;
        }
        .content {
            /* 省略... */
            white-space: nowrap;
        }
    </style>

</head>
<body style="background-color: skyblue;">
    <form id="Task" method="get" action="/Frame/Task_List">
        <div id="DIV1">
            <table frame="void"  width="1100px" border="1" style="background-color:white">
                <thead>
                <th>Task Type</th>
                <th>Box ID</th>
                <th>Batch No.</th>
                <th>Soteria</th>
                <th>Customer ID</th>
                <th>Source</th>
                <th>Source Cell</th>
                <th>Target</th>
                <th>Target Cell</th>
                <th>Priority</th>
                <th>Command ID</th>
                </thead>
                <tbody height="300px">
                    @if (list.Count != 0)
                    {
                        @for (int i = 0; i < list.Count; i = i + 12)
                        {
                            switch (list[i + 11])
                            {

                                case "3":
                                    bg = "Aqua";
                                    break;
                                case "2":
                                case "4":
                                    bg = "Lime";
                                    break;
                                case "88":
                                    bg = "Gold";
                                    break;
                                case "99":
                                    bg = "Red";
                                    break;
                                default:
                                    bg = "white";
                                    break;
                            }
                            <tr style="background-color:@bg" onclick="Release_CommandID(@list[i+10],@list[i+11])">
                                <td align="center" width="100px">@list[i]</td>
                                <td align="center" width="100px">@list[i + 1]</td>
                                <td align="center" width="100px">@list[i + 2]</td>
                                <td align="center" width="100px">@list[i + 3]</td>
                                <td align="center" width="100px">@list[i + 4]</td>
                                <td align="center" width="100px">@list[i + 5]</td>
                                <td align="center" width="100px">@list[i + 6]</td>
                                <td align="center" width="100px">@list[i + 7]</td>
                                <td align="center" width="100px">@list[i + 8]</td>
                                <td align="center" width="100px">@list[i + 9]</td>
                                <td align="center" width="100px">@list[i + 10]</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </form>

</body>
</html>
