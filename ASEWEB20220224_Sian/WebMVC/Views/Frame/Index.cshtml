<html>
@{
    ViewData["Title"] = "Index";
    var data = ViewBag.data;
    int a = 8;
}

<head>
    <script type="text/javascript" src="~/js/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/popper.js/1.12.5/umd/popper.min.js"></script>
    



    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Index</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="">
    <script>
        function TH_Cell_Change() {
            var change = document.getElementById("change").value;
            var changeT = document.getElementsByClassName("temp");
            var changeH = document.getElementsByClassName("percent");
            var changeT1 = document.getElementsByName("changeTemp");
            var changeH1 = document.getElementsByName("changeHumd");
            if (change == "TH") {
                for (var i = 0; i < changeT.length; i++) {
                    var xT = changeT[i].innerHTML;
                    var xH = changeH[i].innerHTML;
                    changeT[i].innerHTML = changeT1[i].value;
                    changeH[i].innerHTML = changeH1[i].value;
                    changeT1[i].value = xT;
                    changeH1[i].value = xH;
                }
            }
        }
    </script>
    <style>
        .top1 {
            width: 1300px;
            height: 8%;
            background-color: rgb(43, 43, 43);
            position: absolute;
            top: 0%;
            left: 0%;
            color: white;
            font-size: 10%;
            line-height: 200%;
            font-family: Microsoft JhengHei;
            font-weight: bold;
            box-sizing: border-box;
        }

        .block1 {
            width: 500px;
            position: absolute;
            left:100px;
            top:900px;
            display: inline-block;
            z-index: -1;
            overflow: hidden;
        }

        .block2 {
            width: 1300px;
            height: 1100px;
            position: absolute;
            left: 0%;
            top: 8%;
            z-index: 2;
        }

        .block3 {
            width: 60%;
            height: 100%;
            position: absolute;
            right: 3%;
            bottom: -1250%;
            display: inline-block;
        }

        .background_left {
            width: 470px;
            height: 300px;
            position: absolute;
            top: 730px;
            left: 5px;
            z-index: 3;
            background-color: aliceblue;
            display: inline-block;
        }

        .background_bottom {
            width: 780px;
            height: 55px;
            position: absolute;
            top: 985px;
            left: -5px;
            z-index: 3;
            background-color: white;
        }

        .border {
            width: 150px;
            height: 80px;
            position: relative;
            display: inline-block;
            z-index: 2;
        }

        .top {
            position: relative;
            font-size: 25px;
            padding: 5px;
            display: flex;
            justify-content: left;
            margin: 5px;
            display: inline-block;
        }

        .button {
            width: 80%;
            height: 30px;
            font-size: 100%;
            background-color: rgb(51, 255, 0);
            left: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-left: 10px;
            z-index: 2;
        }



        .group {
            width: 100%;
        }

        .temp {
            position: relative;
            font-size: 100%;
            top: 20px;
            left: 10px;
        }

        .percent {
            position: relative;
            font-size: 100%;
            top:-5px;
            left: 100px;
        }

        
    </style>
</head>
<body style="background-color: skyblue;">
    
    <input type="hidden" id="change" value="TH" />
    <div class="top1" style="font-size: 20px;">
        Carousel&emsp;&emsp;
        <input type="button" style="height: 40px; line-height: 20px; " value="溫溼度/儲格使用率切換" onclick="TH_Cell_Change()" />
        @*<form method="get" action="/Frame/ShowRecover">
            <input type="submit" style="height: 40px; line-height: 20px; " value="recover" />
        </form>*@
    </div>
    <div class="block1">
        <table>
            <tr>
                <td><div class="top" style="background-color:rgb(51, 255, 0);width:80px">&emsp;&emsp;&emsp;</div></td>
                <td><div style="float: left;line-height:50px;">正常</div></td>
                <td><div class="top" style="background-color: red; width: 80px">&emsp;&emsp;&emsp;</div></td>
                <td><div style="float: left;line-height:50px;">異常</div></td>
            </tr>
            <tr>
                <td><div class="top" style="background-color: yellow; width: 80px">&emsp;&emsp;&emsp;</div></td>
                <td><div style="float: left;line-height:50px;">滿倉</div></td>
                <td><div class="top" style="background-color: rebeccapurple; width: 80px">&emsp;&emsp;&emsp;</div></td>
                <td><div style="float: left;line-height:50px;">帳料不符</div></td>
            </tr>
            <tr>
                <td><div class="top" style="background-color: white; width: 80px">&emsp;&emsp;&emsp;</div></td>
                <td><div style="float: left;line-height:50px;">空倉</div></td>
                <td><div class="top" style="background-color: orange; width: 80px">&emsp;&emsp;&emsp;</div></td>
                <td><div style="float: left;line-height:50px;">未上線</div></td>
            </tr>
        </table>
    </div>


    <div class="block2">
        @if (data.Count != 0)
            {
            <table>
                @for (int i = 0; i < data.Count; i += a)
                {
                <tr>
                    @if (i == 72)
                    {
                        a = 5;
                    }
                    @if (i == 87)
                    {
                        a = 3;
                    }
                    @if (a == 5)
                    {
                        <td></td>
                        <td></td>
                        <td></td>
                    }
                    @if (a == 3)
                    {
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    }
                    @for (int j = 0; j < a; j++)
                    {
                        <td>
                            <div class="border">
                                <div class="temp">@data[i + j].Temperature°C&emsp;/</div>
                                <div class="percent">@data[i + j].Humidity%</div>
                                <input type="hidden" name="changeTemp" value="@data[i+j].Use_Cell&emsp;&emsp;/" />
                                <input type="hidden" name="changeHumd" value="@data[i+j].All_Cell" />
                                @switch (data[i + j].Store_Status)
                                {
                                    case "0":
                                        <input type="button" style="background-color: rgb(51, 255, 0)" onclick="location.assign('/Frame/Cell?rCSID=@(data[i+j].Carousel_ID)&rCSID_Show=@(data[i+j].Carousel_Show_ID)')" class="button" id="@data[i+j].Carousel_ID" value="@data[i+j].Carousel_Show_ID" />
                                        break;
                                    case "1":
                                        <input type="button" style="background-color:yellow" onclick="location.assign('/Frame/Cell?rCSID=@(data[i+j].Carousel_ID)&rCSID_Show=@(data[i+j].Carousel_Show_ID)')" class="button" id="@data[i+j].Carousel_ID" value="@data[i+j].Carousel_Show_ID" />
                                        break;
                                    case "2":
                                        <input type="button" style="background-color:white" onclick="location.assign('/Frame/Cell?rCSID=@(data[i+j].Carousel_ID)&rCSID_Show=@(data[i+j].Carousel_Show_ID)')" class="button" id="@data[i+j].Carousel_ID" value="@data[i+j].Carousel_Show_ID" />
                                        break;
                                    case "3":
                                        <input type="button" style="background-color:red" onclick="location.assign('/Frame/Cell?rCSID=@(data[i+j].Carousel_ID)&rCSID_Show=@(data[i+j].Carousel_Show_ID)')" class="button" id="@data[i+j].Carousel_ID" value="@data[i+j].Carousel_Show_ID" />
                                        break;
                                    case "4":
                                        <input type="button" style="background-color:rebeccapurple" onclick="location.assign('/Frame/Cell?rCSID=@(data[i+j].Carousel_ID)&rCSID_Show=@(data[i+j].Carousel_Show_ID)')" class="button" id="@data[i+j].Carousel_ID" value="@data[i+j].Carousel_Show_ID" />
                                        break;
                                    case "5":
                                        <input type="button" style="background-color:orange" onclick="location.assign('/Frame/Cell?rCSID=@(data[i+j].Carousel_ID)&rCSID_Show=@(data[i+j].Carousel_Show_ID)')" class="button" id="@data[i+j].Carousel_ID" value="@data[i+j].Carousel_Show_ID" />
                                        break;
                                }
                            </div>
                        </td>
                    }

                </tr>
                }
            </table>
            }
        </div>





</body>
</html>